<h1 class='center'> <%= @representative.name %> - Congressional District <%= @representative.district %></h1>

<div class="all_cards">
  <div class="card">
    <%= image_tag src="https://raw.githubusercontent.com/unitedstates/images/gh-pages/congress/450x550/#{@representative.bioguide_id}.jpg", class: 'image'  %>
    <h1><%= @representative.name %></h1>
    <h2><%= @representative.party %></h2>
    <div class="contact-info">
      <div class='contact-details'><i class="fab fa-facebook-f"></i> <%= link_to "facebook.com/#{@representative.facebook}", "http://www.facebook.com/#{@representative.facebook}"%></div>
      <div class='contact-details'><i class="fab fa-twitter"></i> <%= link_to "@#{@representative.twitter}", "http://www.twitter.com/#{@representative.twitter}"%></div>
      <div class='contact-details'><i class="fas fa-external-link-alt"></i> <%= link_to "#{@representative.name}", "#{@representative.website}"%></div>
    </div>
  </div>

  <div class='card'>
    <h1>Voted with <%= @representative.party %>s on <b>80%</b> of Bills</h1>
    <div class="sub-card">
      <h2>Broke Party Lines on These Issues:</h2>
        <ul>
          <li> Guns (3 Bills) </li>
          <li> Climate (2 Bills) </li>
          <li> Taxation (1 Bills) </li>
        </ul>
    </div>
    <div class='sub-card'>
      <h2>Tweets</h2>
    </div>
  </div>

  <div class='card' id='votes'>
    <h1>Votes</h1>
    <div class='sub-card'>
      <table>
        <tr>
          <th><button>Democrat</button></th>
          <th><button>Republican</button></th>
          <th align="left"><div class="dropdown">
              <button>Category</button>
              <div class="dropdown-content">
                <a href="#">Guns</a>
                <a href="#">Climate</a>
                <a href="#">Taxation</a>
              </div>
            </div>
          </th>
          <th>
            <div class="dropdown">
              <button>Congress</button>
              <div class="dropdown-content">
                <a href="#">115th(2017-2018)</a>
                <a href="#">114th(2015-2016)</a>
                <a href="#">113th(2013-2014)</a>
              </div>
            </div>
          </th>
        </tr>
        <tr>
          <% @representative.bills.each do |bill| %>
            <td align='center'><i class="far fa-square fa-lg"></i></td>
            <td  align='center'><i class="far fa-check-square fa-lg"></i></td>
            <td><a href="https://www.govtrack.us/congress/bills/<%=bill.session%>/<%=bill.id%>/summary"> <%= bill.id %>: <%= bill.name %> </td>
            <td align='center'>2017</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

</div>
